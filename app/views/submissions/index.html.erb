<h1 class="title">Мои посылки</h1>

<table class="table is-fullwidth">
  <thead>
    <th>ID</th>
    <th>Дуэль</th>
    <th>Турнир</th>
    <th>Язык</th>
    <th>Статус</th>
    <th>Исходный код</th>
  </thead>
  <tbody>
    <% for subm in current_user.submissions %>
  <tr>
      <td>
        <%= subm[:id] %>
      </td>
      <td>
        <a href=<%= submissions_make_fav_url + "?fav_id=" + subm[:id].to_s %> >
            <% if current_user[:fav_id] == subm[:id] %>
            <i class="fas fa-heart"></i>
            <% else %>
            <i class="far fa-heart"></i>
            <% end %>
        </a>
      </td>
    <td>
        <a href=<%= submissions_make_fav_url + "?fav_id=" + subm[:id].to_s %> >
            <% if current_user[:fav_id] == subm[:id] %>
            <i class="fas fa-heart"></i>
            <% else %>
            <i class="far fa-heart"></i>
            <% end %>
        </a>
      </td>
      <td>
        <%= subm[:compiler] %>
      </td>
      <td>
        <%= subm[:status] %>
      </td>
      <td>
        <button class="button is-link">
          <a href=<%= submissions_source_url + "?id=" + subm[:id].to_s %>>
            Просмотреть
          </a>
        </button>
      </td>
  <tr/>
    <% end %>
  </tbody>
</table>
