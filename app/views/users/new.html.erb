<h1 class="title">Регистрация</h1>

<% if Setting.registration_open %>
  <div class="level">
    <div class="level-left">

      <%= form_with(model: @user, local: true) do |form| %>
        <% if @user.errors.any? %>
          <div class="notification is-danger">
            <h1><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h1>

            <ul>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <div class="label">
            <%= form.label "Имя пользователя" %>
          </div>
          <div class="control">
            <%= form.text_field :username, class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="label">
            <%= form.label "Имя" %>
          </div>
          <div class="control">
            <%= form.text_field :surname, class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="label">
            <%= form.label "Фамилия" %>
          </div>
          <div class="control">
            <%= form.text_field :surname, class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="label">
            <%= form.label "Пароль" %>
          </div>
          <div class="control">
            <%= form.password_field :password, class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="label">
            <%= form.label "Подтверждение пароля" %>
          </div>
          <div class="control">
            <%= form.password_field :password_confirmation, class: "input" %>
          </div>
        </div>

        <div class="control">
          <%= form.submit class: "button is-link", value: "Зарегестрироваться" %>
        </div>
      <% end %>
      <br/>
    </div>
  </div>
<% else %>
  <div class="notification is-primary">
    Регистриция закрыта. Обратитесь к администратору.
  </div>

<% end %>


