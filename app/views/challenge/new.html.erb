<h1 class="title">Run new challenge</h1>

<%= form_tag challenge_create_url do %>
  <div class="field">
    <div class="label">
      Player 1
    </div>
    <p class="control">
      <span class="select">
        <%= collection_select(:challenge, :sub1, Submission.all, :id, :id) %>
      </span>
    </p>
  </div>
  <div class="field">
    <div class="label">
      Player 2
    </div>
    <p class="control">
      <span class="select">
        <%= collection_select(:challenge, :sub2, Submission.all, :id, :id) %>
      </span>
    </p>
  </div>

  <div class="field">
    <div class="control">
      <%= submit_tag "Submit", class: "button is-link" %>
    </div>
  </div>
<% end %>