<h1 class="title">Новая дуэль</h1>

<%= form_tag challenge_create_url do %>
  <% av_submissions = Submission.where(["used_for_ch = true or user_id = ?", current_user.id]).pluck(:name) %>
  <div class="field">
    <div class="label">
      Игрок 1
    </div>
    <p class="control">
      <span class="select">
        <%= select(:challenge, :sub1, av_submissions) %>
      </span>
    </p>
  </div>
  <div class="field">
    <div class="label">
      Игрок 2
    </div>
    <p class="control">
      <span class="select">
        <%= select(:challenge, :sub2, av_submissions) %>
      </span>
    </p>
  </div>

  <div class="field">
    <div class="control">
      <%= submit_tag "К бою!", class: "button is-link" %>
    </div>
  </div>
<% end %>