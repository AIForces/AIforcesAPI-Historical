<h1>Challenge#new</h1>

<%= form_tag challenge_create_url do %>
  SUB1
  <div class="field">
    <p class="control">
      <span class="select">
        <%= collection_select(:challenge, :sub1, Submission.all, :id, :id) %>
      </span>
    </p>
  </div>
  SUB2
  <div class="field">
    <p class="control">
      <span class="select">
        <%= collection_select(:challenge, :sub2, Submission.all, :id, :id) %>
      </span>
    </p>
  </div>

  <div class="field">
    <div class="control">
      <%= submit_tag "Submit", class: "button is-link" %>
    </div>
  </div>
<% end %>