<!DOCTYPE html>
<html>
  <head>
    <title>AIforces</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="#">
          <strong>AIForces</strong>
        </a>
      </div>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          Challenges
        </a>
        <div class="navbar-dropdown">
          <a href=<%= challenge_new_url %> class="navbar-item">
            New challenge
          </a>
          <a href=<%= challenge_index_url %> class="navbar-item">
            All challenges
          </a>
        </div>
      </div>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          Submissions
        </a>
        <div class="navbar-dropdown">
          <a href=<%= submissions_new_url %> class="navbar-item">
            New submission
          </a>
          <a href=<%= submissions_index_url %> class="navbar-item">
            All submissions
          </a>
        </div>
      </div>

      <% if current_user %>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a class="button is-danger" href=<%= sessions_destroy_url %>>
                Logout
              </a>
            </div>
          </div>
        </div>
      <% else %>
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary" href=<%= users_new_url %>>
              <strong>Sign up</strong>
            </a>
            <a class="button is-light" href=<%= sessions_new_url %>>
              Log in
            </a>
          </div>
        </div>
      </div>
      <% end %>

    </nav>
    <div class="container">
      <div class="notification">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
