<h1 class="title">Login</h1>

<div class="level">
  <div class="level-left">
    <%= form_tag sessions_create_path do %>

      <div class="field">
        <div class="label">
          <%= label_tag :username %>
        </div>
        <div class="control">
          <%= text_field :username, "", class: "input" %>
        </div>
      </div>

      <div class=”field”>
        <div class="label">
          <%= label_tag :password %>
        </div>
        <div class="control">
          <%= password_field_tag :password, "", class: "input" %>
        </div>
      </div>

      <div class=”actions”>
        <%= submit_tag 'Login' %>
      </div>
    <% end %>
  </div>
</div>